<script >
$('#form-register').on('submit',function(){
	var isValid = true;
	if($('#name').val().trim() == ''){
		$('#name').next('span').text('Name is empty');
		isValid = false;}
		else{
			$('#name').next('span').text('');
		}
	if($('#email').val().match(/^([a-zA-Z0-9_\-\.]+)@((\[[0-9]{1,3}\.[0-9]{1,3}\.[0-9]{1,3}\.)|(([a-zA-Z0-9\-]+\.)+))([a-zA-Z]{2,4}|[0-9]{1,3})(\]?)$/) == null ){
		$('#email').next('span').text("Email is invalid.Email must include @ ");
		isValid = false;

	} else {
		$('#email').next('span').text('');
	}
	if($('#place').val().match(/\d{1,3}.?\d{0,3}\s[a-zA-Z]{2,30}\s[a-zA-Z]{2,15}/) == null){
		$('#place').next('span').text('place is invalid.Place must include number and address');
	isValid=false;
	} else {
		$('#place').next('span').text('');
	}
	if($('#phone').val().match(/^[0-9-+]+$/) == null){
		$('#phone').next('span').text('phone is invalid.Phone must the number ');
	isValid=false;
	} else {
		$('#phone').next('span').text('');
	}
	
return isValid;
	});

//function day(){
	var select=document.getElementById('selectID');
	var min=1,max=31;
	
	for(var i=min;i<=max;i++){
		var opt=document.createElement('option');
		opt.value=i;
		opt.innerHTML=i;
		select.appendChild(opt);
	}
	
//}
